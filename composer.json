{
    "name": "goodnews/hyperf-passport",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "Hyperf Passport provides OAuth2 server support to Hyperf",
    "authors": [
        {
            "name": "goodnews",
            "email": "admin@good.news"
        }
    ],
    "autoload": {
        "psr-4": {
            "Richard\\HyperfPassport\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": "^7.3|^8.0",
        "ext-json": "*",
        "phpseclib/phpseclib": "^2ã€‚0|^3.0"
    },
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Richard\\HyperfPassport\\ConfigProvider"
        }
    }
}
